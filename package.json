{
	"name": "vk-group-tracking-bot",
	"version": "0.1.2",
	"description": "Read your VK news in Telegram",
	"main": "index.js",
	"engines": {
		"node": "12.x"
	},
	"scripts": {
		"prebuild": "rimraf ./build/*",
		"build": "tsc",
		"start": "cross-env NODE_ENV=production node build/index.js",
		"dev": "tsc-watch --onSuccess \"cross-env NODE_ENV=development node build/index.js\"",
		"validate": "npm run check-format && npm run check-types && npm run lint",
		"check-format": "prettier src *.{js,json} --check",
		"lint": "eslint --ext .js,.ts src",
		"check-types": "tsc --noEmit",
		"test": "is-ci \"test:coverage\" \"test:watch\"",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"keywords": [],
	"author": "Alex Kondratyuk",
	"license": "ISC",
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"dependencies": {
		"cross-env": "^7.0.2",
		"date-fns": "^2.16.1",
		"dotenv-safe": "^8.2.0",
		"lodash": "^4.17.20",
		"markdown-escape": "^1.1.0",
		"mongoose": "^5.10.7",
		"ms": "^2.1.2",
		"node-fetch": "^2.6.1",
		"p-queue": "^6.6.1",
		"quick-lru": "^5.1.1",
		"superstruct": "^0.10.12",
		"telegraf": "^3.38.0"
	},
	"devDependencies": {
		"@babel/plugin-proposal-optional-chaining": "^7.11.0",
		"@babel/plugin-transform-modules-commonjs": "^7.10.4",
		"@babel/preset-typescript": "^7.10.4",
		"@types/jest": "^26.0.14",
		"@types/lodash": "^4.14.161",
		"@types/mongoose": "^5.7.36",
		"@types/ms": "^0.7.31",
		"@types/node": "^14.11.2",
		"@types/node-fetch": "^2.5.7",
		"@typescript-eslint/eslint-plugin": "^4.3.0",
		"@typescript-eslint/parser": "^4.3.0",
		"eslint": "^7.10.0",
		"eslint-plugin-import": "^2.22.1",
		"husky": "^4.3.0",
		"is-ci-cli": "^2.1.2",
		"jest": "^26.4.2",
		"prettier": "^2.1.2",
		"pretty-quick": "^3.0.2",
		"rimraf": "^3.0.2",
		"tsc-watch": "^4.2.9",
		"typescript": "^4.0.3"
	}
}
