{
	"name": "vk-group-tracking-bot",
	"version": "0.9.0",
	"description": "Read your VK news in Telegram",
	"private": true,
	"repository": "https://github.com/lynxtaa/vk-group-tracking-bot.git",
	"homepage": "https://github.com/lynxtaa/vk-group-tracking-bot#readme",
	"type": "module",
	"main": "index.js",
	"engines": {
		"node": ">=16.13.0"
	},
	"scripts": {
		"prebuild": "rimraf ./build/*",
		"build": "tsc",
		"start": "cross-env NODE_ENV=production node -r dotenv-safe/config build/index.js",
		"dev": "tsc-watch --onSuccess \"cross-env NODE_ENV=development node -r dotenv-safe/config build/index.js\"",
		"validate": "npm run check-format && npm run check-types && npm run lint",
		"check-format": "prettier src *.{js,json} --check",
		"lint": "eslint --ext .js,.ts src",
		"check-types": "tsc --noEmit",
		"test": "is-ci-cli \"test:coverage\" \"test:watch\"",
		"test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
		"test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch"
	},
	"prettier": "@lynxtaa/prettier-config",
	"keywords": [],
	"author": "Alex Kondratyuk",
	"license": "ISC",
	"simple-git-hooks": {
		"pre-commit": "npx pretty-quick --staged"
	},
	"dependencies": {
		"@typegoose/typegoose": "9.2.0",
		"cross-env": "7.0.3",
		"date-fns": "2.27.0",
		"dotenv-safe": "8.2.0",
		"got": "^11.8.3",
		"lodash": "4.17.21",
		"mongoose": "6.0.14",
		"ms": "2.1.3",
		"p-queue": "7.1.0",
		"quick-lru": "6.0.2",
		"superstruct": "0.15.3",
		"telegraf": "4.4.2"
	},
	"devDependencies": {
		"@babel/plugin-proposal-class-properties": "7.16.0",
		"@babel/plugin-proposal-decorators": "7.16.4",
		"@babel/preset-typescript": "7.16.0",
		"@lynxtaa/prettier-config": "^0.1.1",
		"@types/jest": "27.0.3",
		"@types/lodash": "4.14.177",
		"@types/ms": "0.7.31",
		"@types/node": "16.11.11",
		"@typescript-eslint/eslint-plugin": "5.5.0",
		"@typescript-eslint/parser": "5.5.0",
		"babel-plugin-transform-typescript-metadata": "0.3.2",
		"eslint": "8.3.0",
		"eslint-plugin-import": "2.25.3",
		"is-ci-cli": "2.2.0",
		"jest": "27.4.3",
		"msw": "^0.35.0",
		"prettier": "2.5.0",
		"pretty-quick": "3.1.2",
		"rimraf": "3.0.2",
		"simple-git-hooks": "^2.7.0",
		"tsc-watch": "4.5.0",
		"typescript": "4.5.2"
	}
}
