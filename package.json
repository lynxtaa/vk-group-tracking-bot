{
	"name": "vk-group-tracking-bot",
	"version": "0.5.0",
	"description": "Read your VK news in Telegram",
	"repository": "https://github.com/lynxtaa/vk-group-tracking-bot.git",
	"homepage": "https://github.com/lynxtaa/vk-group-tracking-bot#readme",
	"main": "index.js",
	"engines": {
		"node": "12.x"
	},
	"scripts": {
		"prebuild": "rimraf ./build/*",
		"build": "tsc",
		"start": "cross-env NODE_ENV=production node build/index.js",
		"dev": "tsc-watch --onSuccess \"cross-env NODE_ENV=development node build/index.js\"",
		"validate": "npm run check-format && npm run check-types && npm run lint",
		"check-format": "prettier src *.{js,json} --check",
		"lint": "eslint --ext .js,.ts src",
		"check-types": "tsc --noEmit",
		"test": "is-ci \"test:coverage\" \"test:watch\"",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"keywords": [],
	"author": "Alex Kondratyuk",
	"license": "ISC",
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"dependencies": {
		"@typegoose/typegoose": "7.4.1",
		"cross-env": "7.0.2",
		"date-fns": "2.16.1",
		"dotenv-safe": "8.2.0",
		"lodash": "4.17.20",
		"markdown-escape": "1.1.0",
		"mongoose": "5.10.7",
		"ms": "2.1.2",
		"node-fetch": "2.6.1",
		"p-queue": "6.6.1",
		"quick-lru": "5.1.1",
		"superstruct": "0.12.1",
		"telegraf": "3.38.0"
	},
	"devDependencies": {
		"@babel/plugin-proposal-class-properties": "^7.12.1",
		"@babel/plugin-proposal-decorators": "^7.12.1",
		"@babel/plugin-proposal-optional-chaining": "7.12.7",
		"@babel/plugin-transform-modules-commonjs": "7.12.1",
		"@babel/preset-typescript": "7.12.7",
		"@types/jest": "26.0.16",
		"@types/lodash": "4.14.165",
		"@types/mongoose": "5.10.2",
		"@types/ms": "0.7.31",
		"@types/node": "14.14.10",
		"@types/node-fetch": "2.5.7",
		"@typescript-eslint/eslint-plugin": "4.9.1",
		"@typescript-eslint/parser": "4.9.1",
		"babel-plugin-transform-typescript-metadata": "^0.3.1",
		"eslint": "7.15.0",
		"eslint-plugin-import": "2.22.1",
		"husky": "4.3.5",
		"is-ci-cli": "2.1.2",
		"jest": "26.6.3",
		"prettier": "2.2.1",
		"pretty-quick": "3.1.0",
		"rimraf": "3.0.2",
		"tsc-watch": "4.2.9",
		"typescript": "4.1.2"
	}
}
