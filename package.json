{
	"name": "vk-group-tracking-bot",
	"version": "0.9.0",
	"description": "Read your VK news in Telegram",
	"repository": "https://github.com/lynxtaa/vk-group-tracking-bot.git",
	"homepage": "https://github.com/lynxtaa/vk-group-tracking-bot#readme",
	"main": "index.js",
	"engines": {
		"node": ">=14.0.0"
	},
	"scripts": {
		"prebuild": "rimraf ./build/*",
		"build": "tsc",
		"start": "cross-env NODE_ENV=production node build/index.js",
		"dev": "tsc-watch --onSuccess \"cross-env NODE_ENV=development node build/index.js\"",
		"validate": "npm run check-format && npm run check-types && npm run lint",
		"check-format": "prettier src *.{js,json} --check",
		"lint": "eslint --ext .js,.ts src",
		"check-types": "tsc --noEmit",
		"test": "is-ci-cli \"test:coverage\" \"test:watch\"",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"keywords": [],
	"author": "Alex Kondratyuk",
	"license": "ISC",
	"simple-git-hooks": {
		"pre-commit": "npx pretty-quick --staged"
	},
	"dependencies": {
		"@typegoose/typegoose": "7.6.3",
		"cross-env": "7.0.3",
		"date-fns": "2.22.1",
		"dotenv-safe": "8.2.0",
		"lodash": "4.17.21",
		"mongoose": "5.10.18",
		"ms": "2.1.3",
		"node-fetch": "2.6.1",
		"p-queue": "6.6.2",
		"quick-lru": "5.1.1",
		"superstruct": "0.15.2",
		"telegraf": "4.4.0"
	},
	"devDependencies": {
		"@babel/plugin-proposal-class-properties": "7.14.5",
		"@babel/plugin-proposal-decorators": "7.14.5",
		"@babel/plugin-proposal-optional-chaining": "7.14.5",
		"@babel/plugin-transform-modules-commonjs": "7.14.5",
		"@babel/preset-typescript": "7.14.5",
		"@types/jest": "26.0.24",
		"@types/lodash": "4.14.171",
		"@types/mongoose": "5.10.3",
		"@types/ms": "0.7.31",
		"@types/node": "14.14.17",
		"@types/node-fetch": "2.5.11",
		"@typescript-eslint/eslint-plugin": "4.28.4",
		"@typescript-eslint/parser": "4.28.4",
		"babel-plugin-transform-typescript-metadata": "0.3.2",
		"eslint": "7.31.0",
		"eslint-plugin-import": "2.23.4",
		"is-ci-cli": "2.2.0",
		"jest": "27.0.6",
		"prettier": "2.3.2",
		"pretty-quick": "3.1.1",
		"rimraf": "3.0.2",
		"simple-git-hooks": "^2.5.1",
		"tsc-watch": "4.4.0",
		"typescript": "4.3.5"
	}
}
